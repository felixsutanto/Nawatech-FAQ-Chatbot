# Environment Variables for Nawatech FAQ Chatbot
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ================================
# OpenAI Configuration (Required)
# ================================
# Get your free API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
TEMPERATURE=0.7
MAX_TOKENS=1000
REQUEST_TIMEOUT=30

# ================================
# RAG Configuration
# ================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_K=4
SIMILARITY_THRESHOLD=0.7

# ================================
# Memory Configuration
# ================================
MEMORY_WINDOW=10

# ================================
# Security Configuration
# ================================
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100
MAX_INPUT_LENGTH=1000

# ================================
# Application Configuration
# ================================
PORT=8501
HOST=0.0.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# ================================
# UI Configuration
# ================================
APP_TITLE=Nawatech FAQ Chatbot
APP_ICON=ðŸ¤–
COMPANY_NAME=PT. Nawa Darsana Teknologi

# ================================
# Data Configuration
# ================================
FAQ_FILE_PATH=data/FAQ_Nawa.xlsx
VECTOR_STORE_PATH=data/vector_store

# ================================
# Optional: Database Configuration
# ================================
# Uncomment if using external database for persistence
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=chatbot_db
# DB_USERNAME=chatbot_user
# DB_PASSWORD=your_db_password

# ================================
# Optional: Redis Configuration
# ================================
# Uncomment if using Redis for caching and rate limiting
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# ================================
# Optional: Monitoring Configuration
# ================================
# Uncomment if using monitoring tools
# ENABLE_METRICS=true
# METRICS_PORT=9090
# SENTRY_DSN=https://your-sentry-dsn.com

# ================================
# Production Configuration
# ================================
# SSL/TLS Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# CORS Configuration
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Session Configuration
# SESSION_SECRET=your-session-secret-key
# SESSION_TIMEOUT=3600

# ================================
# Development Configuration
# ================================
# Hot reloading for development
# STREAMLIT_DEVELOPMENT_MODE=true
# ENABLE_DEBUG_LOGS=true
